// Scala program to create an abstract class 
// with data members

abstract class Demo1 {
  var num: Int = 0;
  def sayHello();
}

class Demo2 extends Demo1 {
  def sayHello() {
    println("Hello from Demo2");
  }
}

object Sample {
  def main(args: Array[String]) {
    var obj = new Demo2();

    obj.num = 10;
    
    printf("Num: %d\n", obj.num);
    obj.sayHello();
  }
}
