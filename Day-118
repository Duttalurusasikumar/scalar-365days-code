// Scala program to return a value from a
// function using "return" statement

object Sample {
  def main(args: Array[String]) {
    // Function calling
    printf("Addition is: %d\n", addNum(20, 30));
  }
  
  // Function definition
  def addNum(num1: Int, num2: Int): Int = {
    var result: Int = 0;

    result = num1 + num2;

    return result;
  }
}
