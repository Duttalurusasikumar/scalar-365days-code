// Scala program to create a
// function with arguments

object Sample {
  def main(args: Array[String]) {
    //Function calling
    addNum(10, 20);
  }
  
  //Function definition
  def addNum(num1: Int, num2: Int) {
    var result: Int = 0;

    result = num1 + num2;

    printf("Addition is: %d\n", result);
  }
}
