// Scala program to get first n number of elements
// from the array

object Sample {
  def main(args: Array[String]) {
    var arr1 = Array(1, 2, 3, 4, 5);
    var arr2 = arr1.take(3);

    var i: Int = 0;

    printf("Elements of arr2\n");
    while (i < arr2.length) {
      printf("%d ", arr2(i));
      i = i + 1;
    }
    println();
  }
}
